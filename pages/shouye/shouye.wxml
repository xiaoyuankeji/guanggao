<van-search value="{{ value }}" background="#4fc08d" shape="round" placeholder="请输入搜索关键词" use-action-slot bind:change="onChange" bind:search="onSearch">
	<view slot="action" bind:tap="onClick">搜索</view>
</van-search>

<!-- 按钮实验 -->
