<view class="zhengti">
<view class="name">
<text class="name_text">收件人：</text> 
<input 
  class="name_input"  
  maxlength="10" 
  bindinput="onChange" 
  placeholder="请输入真实姓名"/>

</view>

<view class="phone">
<text class="name_text">电话：</text>
<input 
  class="name_input"  
  maxlength="11" 
  type='number'
  bindinput="phone" 
  placeholder="请输入收件人电话"/>

</view>

<text class="dizhi">收件地址</text>

<textarea class="jutidizhi" 
    placeholder="请输入省市区具体收件地址"
    bindblur="bindTextAreaBlur"
    value="{{details}}">
</textarea>

<button class="queren" >确认地址</button>
</view>